%environment
## ENV: Kraken2
export PATH=/opt/kraken2/bin:$PATH
## ENV: 
export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH
## ENV: Bracken
export PATH=/opt/Bracken:$PATH
## ENV:minimap2
export PATH=/opt/minimap2-2.17_x64-linux:$PATH
